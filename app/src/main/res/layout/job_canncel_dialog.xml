<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/commonn_margin_pad_xx"
            android:paddingTop="@dimen/commonn_margin_pad_xx"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/fair_payment"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/commonn_tv_xx" />


                <TextView
                    android:id="@+id/tvPickUpLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Canncel Job"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/commonn_tv_xx" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



    <CheckBox
        android:id="@+id/cb_noshown"
        android:layout_width="wrap_content"
        android:button="@null"
        android:textColor="@color/menutxt"
        android:text="noshow"
        android:checked="true"
        android:drawablePadding="@dimen/commonn_margin_pad_x"
        android:layout_margin="@dimen/commonn_margin_pad_x"
        android:drawableLeft="@drawable/checkbox_notifcation_green"
        android:layout_height="wrap_content" />

    <CheckBox
      android:id="@+id/cb_other"
        android:layout_width="wrap_content"
        android:button="@null"
        android:textColor="@color/menutxt"
        android:text="Other"
        android:drawablePadding="@dimen/commonn_margin_pad_x"
        android:layout_margin="@dimen/commonn_margin_pad_x"
        android:drawableLeft="@drawable/checkbox_notifcation_green"
        android:layout_height="wrap_content" />




    <EditText
        android:layout_width="match_parent"
        android:lines="3"
        android:gravity="top"
        android:padding="@dimen/commonn_margin_pad"
        android:hint="Feed back"
        android:id="@+id/edtFeadBack"
        android:layout_marginTop="@dimen/commonn_margin_pad_x"
        android:background="@color/gray_btn_bg_color"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonn_margin_pad"
        android:background="@color/top_color"
        android:orientation="horizontal"


        android:weightSum="2">


        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@string/confirm"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>