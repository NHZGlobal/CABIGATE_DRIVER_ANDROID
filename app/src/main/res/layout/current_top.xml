<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    android:paddingTop="@dimen/commonn_margin_pad_xx"
    android:orientation="horizontal">

    <CheckBox

         android:enabled="false"
        android:id="@+id/cb_avilable"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/commonn_margin_pad"
        android:background="@null"
        android:button="@null"
         android:checked="true"
        android:drawableLeft="@drawable/checkbox_avilabel"

        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="@dimen/commonn_margin_pad_x"

        android:layout_height="wrap_content">
    <CheckBox


        android:id="@+id/cb_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="@dimen/commonn_margin_pad"
        android:background="@null"
        android:button="@null"



        android:drawableLeft="@drawable/checkbox_away"

        android:visibility="visible" />

        <TextView
            android:id="@+id/cb_away_container"
            android:layout_marginLeft="@dimen/commonn_margin_pad_x"
            android:layout_marginRight="@dimen/commonn_margin_pad"
            android:layout_width="60dp"
            android:layout_centerInParent="true"
            android:layout_height="60dp"/>

    </RelativeLayout>
    <CheckBox

        android:id="@+id/cb_busy"

        android:layout_marginLeft="@dimen/commonn_margin_pad_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/commonn_margin_pad"
        android:background="@null"
        android:button="@null"

        android:drawableLeft="@drawable/checkbox_busy"

        android:visibility="visible" />

</LinearLayout>