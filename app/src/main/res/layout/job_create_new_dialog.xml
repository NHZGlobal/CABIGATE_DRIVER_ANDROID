<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"


    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="@dimen/commonn_margin_pad"
        android:paddingBottom="@dimen/commonn_margin_pad"
        android:background="@color/top_color"
        android:layout_height="wrap_content">



        <TextView
            android:layout_marginTop="@dimen/commonn_margin_pad"
            android:layout_marginBottom="@dimen/commonn_margin_pad"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="New Job"
            android:layout_width="match_parent"
            android:textSize="@dimen/commonn_tv_xxxx"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />






    </LinearLayout>


        <LinearLayout
            android:paddingLeft="@dimen/commonn_margin_pad"
            android:paddingRight="@dimen/commonn_margin_pad"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/commonn_tv_xx"
                android:textColor="@color/text_color"
                android:layout_gravity="center"
               android:text="@string/pickuplocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPickUpLocation"
                android:textSize="@dimen/commonn_tv_xx"
                android:textColor="@color/text_color"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/location_black_ic"
               android:text="@string/pickuplocation"
                android:drawablePadding="@dimen/commonn_margin_pad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/commonn_tv_xx"
                android:textColor="@color/text_color"
                android:layout_gravity="center"
               android:text="@string/dropofflocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvNavDropOff"
                android:textSize="@dimen/commonn_tv_xx"
                android:textColor="@color/text_color"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/flag_black_ic"
               android:text="@string/dropofflocation"
                android:drawablePadding="@dimen/commonn_margin_pad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/commonn_margin_pad"
                android:layout_width="wrap_content"
                android:text="Vehicle"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginTop="@dimen/commonn_margin_pad"
                android:id="@+id/sp_vehicle"
                android:background="@drawable/small_textfield"
                android:layout_width="match_parent"
                android:layout_height="35dp"></Spinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/commonn_margin_pad"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="When"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/commonn_margin_pad"
                    android:layout_marginTop="@dimen/commonn_margin_pad"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Assign"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content" />

            </LinearLayout>


              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:weightSum="2"
                  android:layout_height="wrap_content">
                  <RadioGroup
                      android:layout_weight="1"
                      android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

                      <RadioButton
                          android:id="@+id/rb_asp"
                          android:layout_width="wrap_content"
                          android:button="@null"
                          android:textColor="@color/menutxt"
                          android:text="ASAP"
                          android:checked="true"
                          android:drawablePadding="@dimen/commonn_margin_pad"
                          android:layout_margin="@dimen/commonn_margin_pad_x"
                          android:drawableLeft="@drawable/checkbox_notifcation_green"
                          android:layout_height="wrap_content" />

                      <RadioButton
                          android:id="@+id/rb_later"
                          android:layout_gravity="center|right"
                          android:layout_width="wrap_content"
                          android:button="@null"
                          android:gravity="right"
                          android:textColor="@color/menutxt"
                          android:text="LATER"
                          android:drawablePadding="@dimen/commonn_margin_pad_x"
                          android:layout_margin="@dimen/commonn_margin_pad_x"
                          android:drawableLeft="@drawable/checkbox_notifcation_green"
                          android:layout_height="wrap_content" />

                  </RadioGroup>
                  <View
                      android:background="@color/menutxt"
                      android:layout_width="1dp"
                      android:layout_height="match_parent"/>


                  <RadioGroup
                      android:layout_width="wrap_content"
                      android:orientation="horizontal"
                        android:layout_weight="1"
                      android:layout_height="wrap_content">

                      <RadioButton
                          android:id="@+id/rb_self"
                          android:layout_width="wrap_content"
                          android:button="@null"
                          android:textColor="@color/menutxt"
                          android:text="Self"
                          android:checked="true"
                          android:drawablePadding="@dimen/commonn_margin_pad_x"
                          android:layout_margin="@dimen/commonn_margin_pad_x"
                          android:drawableLeft="@drawable/checkbox_notifcation_green"
                          android:layout_height="wrap_content" />

                      <RadioButton
                          android:id="@+id/rb_other"
                          android:layout_gravity="center|right"
                          android:layout_width="wrap_content"
                          android:button="@null"
                          android:gravity="right"
                          android:textColor="@color/menutxt"
                          android:text="Other"
                          android:drawablePadding="@dimen/commonn_margin_pad_x"
                          android:layout_margin="@dimen/commonn_margin_pad"
                          android:drawableLeft="@drawable/checkbox_notifcation_green"
                          android:layout_height="wrap_content" />

                  </RadioGroup>
              </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_gravity="right"
                android:text="12-24-343-34"
                android:drawablePadding="@dimen/commonn_margin_pad"
                android:textColor="@color/top_color"
                android:drawableLeft="@drawable/calendar_black_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:padding="@dimen/commonn_margin_pad"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Client Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/commonn_tv_x" />

                    <TextView

                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/commonn_margin_pad"
                        android:id="@+id/tvName"
                        android:hint="Name"
                        android:padding="3dp"
                        android:background="@drawable/small_textfield"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:text="Number of passengers"
                        android:textSize="@dimen/commonn_tv_x"
                        android:layout_marginTop="@dimen/commonn_margin_pad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:layout_marginTop="@dimen/commonn_margin_pad"
                        android:id="@+id/spinner_no_passenger"

                        android:padding="3dp"
                        android:background="@drawable/small_textfield"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"></Spinner>
                </LinearLayout>
                 <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                     android:padding="@dimen/commonn_margin_pad"
                     android:orientation="vertical"
                    android:layout_height="wrap_content">
                     <TextView
                         android:text="Phone Number"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/commonn_tv_x" />

                     <TextView
                         android:layout_marginTop="@dimen/commonn_margin_pad"
                         android:id="@+id/tvPhone"
                         android:paddingRight="3dp"
                         android:gravity="center_vertical"
                         android:hint="Phone number"
                         android:padding="3dp"
                         android:background="@drawable/small_textfield"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"></TextView>
                     <TextView
                         android:text="Number of bags"
                         android:layout_marginTop="@dimen/commonn_margin_pad"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/commonn_tv_x" />

                     <Spinner
                         android:layout_marginTop="@dimen/commonn_margin_pad"
                         android:id="@+id/spinner_no_bag"
                         android:hint="Phone number"
                         android:padding="3dp"
                         android:background="@drawable/small_textfield"
                         android:layout_width="match_parent"
                         android:layout_height="35dp"></Spinner>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>








    </LinearLayout>







    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/top_color"
        android:layout_marginTop="@dimen/commonn_margin_pad_xx"


        android:layout_height="wrap_content">




        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:background="@drawable/btn_gray"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="3dp"
            android:text="@string/confirm"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:background="@drawable/btn_gray"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="3dp"
            android:text="@string/cancel"
            android:layout_height="wrap_content" /></LinearLayout>


</LinearLayout>