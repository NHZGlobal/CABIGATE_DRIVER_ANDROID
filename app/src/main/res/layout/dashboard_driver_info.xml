<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">

   <ImageView
       android:layout_centerVertical="true"
       android:id="@+id/ivDriverProfile"
       android:layout_width="100dp"
       android:src="@drawable/congrats_ic"
       android:layout_height="100dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/ivDriverProfile"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/commonn_margin_pad_xx"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDriverName"
            android:layout_width="wrap_content"
            android:text="Driver Name"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/commonn_tv_xxxxx"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/commonn_tv"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCarNumber"
            android:layout_width="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/commonn_tv_xx"
            android:layout_height="wrap_content" />

    </LinearLayout>





</RelativeLayout>