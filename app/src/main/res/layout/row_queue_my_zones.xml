<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="2.5dp"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
   android:weightSum="2"
    android:padding="@dimen/commonn_margin_pad_x"

android:background="#22231E"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:drawableLeft="@drawable/timer_white_ic"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/commonn_margin_pad_x"
            android:text="When:"
            android:layout_marginTop="@dimen/commonn_margin_pad"
            android:layout_height="wrap_content" />
        >


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
             android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="right"
            android:text="When:"
            android:layout_marginTop="@dimen/commonn_margin_pad"
            android:layout_height="wrap_content" />



    </LinearLayout>





</LinearLayout>
</RelativeLayout>