<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/commonn_margin_pad_xx"
            android:paddingTop="@dimen/commonn_margin_pad_xx"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/fair_payment"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/commonn_tv_xx" />


                <TextView
                    android:id="@+id/tvPickUpLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/for_job"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/commonn_tv_xx" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




         <LinearLayout
             android:layout_width="match_parent"
             android:weightSum="2"
             android:layout_marginTop="@dimen/commonn_margin_pad"
             android:layout_height="wrap_content">


             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content">


                 <Button
                     android:id="@+id/btnCash"
                     android:layout_width="fill_parent"
                     android:background="@null"
                     android:layout_centerHorizontal="true"
                     android:text="Pay By Cash"
                     android:drawablePadding="@dimen/commonn_margin_pad_x"
                     android:drawableTop="@drawable/paybycash_ic"
                     android:layout_height="wrap_content" />

             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content">


                 <Button
                     android:id="@+id/btnCard"
                     android:layout_width="fill_parent"
                     android:background="@null"
                     android:layout_centerHorizontal="true"
                     android:text="Pay By Card"
                     android:drawablePadding="@dimen/commonn_margin_pad_x"
                     android:drawableTop="@drawable/paybycard_ic"
                     android:layout_height="wrap_content" />

             </RelativeLayout>




         </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:lines="4"
        android:gravity="top"
        android:padding="@dimen/commonn_margin_pad"
        android:hint="Feed back"
        android:id="@+id/edtFeadBack"
        android:layout_marginTop="@dimen/commonn_margin_pad_x"
        android:background="@color/gray_btn_bg_color"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonn_margin_pad"
        android:background="@color/top_color"
        android:orientation="horizontal"


        android:weightSum="2">


        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@string/Back"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@string/next"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>